{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            border-radius: 8px;
            margin-top: 50px;
            margin-bottom: 50px;
        }
        .card-title {
            font-weight: 300;
            margin-bottom: 30px;
        }
        .input-field label {
            color: #9e9e9e;
        }
        .input-field input[type=email]:focus + label,
        .input-field input[type=password]:focus + label {
            color: #667eea !important;
        }
        .input-field input[type=email]:focus,
        .input-field input[type=password]:focus {
            border-bottom: 1px solid #667eea !important;
            box-shadow: 0 1px 0 0 #667eea !important;
        }
        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            width: 100%;
            margin-top: 20px;
        }
        .btn-login:hover {
            background: linear-gradient(135deg, #5568d3 0%, #6a4093 100%);
        }
        .btn-register {
            background-color: #fff;
            color: #667eea;
            width: 100%;
            margin-top: 10px;
        }
        .btn-register:hover {
            background-color: #f5f5f5;
            color: #5568d3;
        }
        .divider-text {
            text-align: center;
            margin: 20px 0;
            color: #9e9e9e;
        }
        .alert-box {
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
        }
        .alert-error {
            background-color: #ffebee;
            color: #c62828;
            border-left: 4px solid #c62828;
        }
        .alert-info {
            background-color: #e3f2fd;
            color: #1565c0;
            border-left: 4px solid #1565c0;
        }
    </style>
{% endblock %}

{% block header %}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="card login-card">
                <div class="card-content">
                    <span class="card-title center-align">
                        <i class="material-icons large" style="color: #667eea;">account_circle</i>
                        <h4>Welcome Back</h4>
                    </span>

                    {% if error %}
                        <div class="alert-box alert-error">
                            <i class="material-icons tiny" style="vertical-align: middle;">error</i>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="alert-box alert-info">
                            You are logged in as <strong>{{ app.user.userIdentifier }}</strong>, 
                            <a href="{{ logout_path() }}">Logout</a>
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="input-field">
                            <i class="material-icons prefix">email</i>
                            <input type="email" 
                                   value="{{ last_username }}" 
                                   name="email" 
                                   id="inputEmail" 
                                   autocomplete="email" 
                                   required 
                                   autofocus>
                            <label for="inputEmail">Email</label>
                        </div>

                        <div class="input-field">
                            <i class="material-icons prefix">lock</i>
                            <input type="password" 
                                   name="password" 
                                   id="inputPassword" 
                                   autocomplete="current-password" 
                                   required>
                            <label for="inputPassword">Password</label>
                        </div>

                        <input type="hidden" 
                               name="_csrf_token" 
                               data-controller="csrf-protection" 
                               value="{{ csrf_token('authenticate') }}">

                        <p>
                            <label>
                                <input type="checkbox" name="_remember_me" />
                                <span>Remember me</span>
                            </label>
                        </p>

                        <button class="btn waves-effect waves-light btn-login" type="submit">
                            Sign In
                            <i class="material-icons right">send</i>
                        </button>

                        <div class="divider-text">
                            <span>or</span>
                        </div>

                        <a href="{{ path('app_register') }}" class="btn waves-effect btn-register">
                            <i class="material-icons left">person_add</i>
                            Create Account
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            M.updateTextFields();
        });
    </script>
{% endblock %}