{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .register-card {
            border-radius: 8px;
            margin-top: 50px;
            margin-bottom: 50px;
        }
        .card-title {
            font-weight: 300;
            margin-bottom: 30px;
        }
        .input-field label {
            color: #9e9e9e;
        }
        .input-field input[type=email]:focus + label,
        .input-field input[type=password]:focus + label,
        .input-field input[type=text]:focus + label {
            color: #667eea !important;
        }
        .input-field input[type=email]:focus,
        .input-field input[type=password]:focus,
        .input-field input[type=text]:focus {
            border-bottom: 1px solid #667eea !important;
            box-shadow: 0 1px 0 0 #667eea !important;
        }
        .input-field input[type=email].invalid,
        .input-field input[type=password].invalid,
        .input-field input[type=text].invalid {
            border-bottom: 1px solid #f44336 !important;
            box-shadow: 0 1px 0 0 #f44336 !important;
        }
        .btn-register {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            width: 100%;
            margin-top: 20px;
        }
        .btn-register:hover {
            background: linear-gradient(135deg, #5568d3 0%, #6a4093 100%);
        }
        .btn-login {
            background-color: #fff;
            color: #667eea;
            width: 100%;
            margin-top: 10px;
        }
        .btn-login:hover {
            background-color: #f5f5f5;
            color: #5568d3;
        }
        .divider-text {
            text-align: center;
            margin: 20px 0;
            color: #9e9e9e;
        }
        .alert-box {
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
        }
        .alert-error {
            background-color: #ffebee;
            color: #c62828;
            border-left: 4px solid #c62828;
        }
        .alert-error ul {
            margin: 5px 0;
            padding-left: 20px;
        }
        .alert-error li {
            list-style-type: disc;
        }
        [type="checkbox"]:checked + span:not(.lever):before {
            border-right: 2px solid #667eea;
            border-bottom: 2px solid #667eea;
        }
        .helper-text {
            font-size: 0.8rem;
            color: #9e9e9e;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="card register-card">
                <div class="card-content">
                    <span class="card-title center-align">
                        <i class="material-icons large" style="color: #667eea;">person_add</i>
                        <h4>Create Account</h4>
                    </span>

                    {% if form_errors(registrationForm) %}
                        <div class="alert-box alert-error">
                            <i class="material-icons tiny" style="vertical-align: middle;">error</i>
                            <strong>Please fix the following errors:</strong>
                            {{ form_errors(registrationForm) }}
                        </div>
                    {% endif %}

                    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                        
                        <div class="input-field">
                            <i class="material-icons prefix">email</i>
                            {{ form_widget(registrationForm.email, {
                                'attr': {
                                    'class': form_errors(registrationForm.email) ? 'invalid' : ''
                                }
                            }) }}
                            {{ form_label(registrationForm.email) }}
                            {% if form_errors(registrationForm.email) %}
                                <span class="helper-text red-text">
                                    {{ form_errors(registrationForm.email) }}
                                </span>
                            {% endif %}
                        </div>

                        <div class="input-field">
                            <i class="material-icons prefix">lock</i>
                            {{ form_widget(registrationForm.plainPassword, {
                                'attr': {
                                    'class': form_errors(registrationForm.plainPassword) ? 'invalid' : ''
                                }
                            }) }}
                            {{ form_label(registrationForm.plainPassword, 'Password') }}
                            {% if form_errors(registrationForm.plainPassword) %}
                                <span class="helper-text red-text">
                                    {{ form_errors(registrationForm.plainPassword) }}
                                </span>
                            {% else %}
                                <span class="helper-text">
                                    Use at least 8 characters with a mix of letters and numbers
                                </span>
                            {% endif %}
                        </div>

                        <p style="margin-top: 25px;">
                            <label>
                                {{ form_widget(registrationForm.agreeTerms) }}
                                <span>
                                    {{ form_label(registrationForm.agreeTerms) }}
                                </span>
                            </label>
                            {% if form_errors(registrationForm.agreeTerms) %}
                                <span class="helper-text red-text" style="display: block; margin-top: 5px;">
                                    {{ form_errors(registrationForm.agreeTerms) }}
                                </span>
                            {% endif %}
                        </p>

                        <button type="submit" class="btn waves-effect waves-light btn-register">
                            Create Account
                            <i class="material-icons right">arrow_forward</i>
                        </button>

                        <div class="divider-text">
                            <span>Already have an account?</span>
                        </div>

                        <a href="{{ path('app_login') }}" class="btn waves-effect btn-login">
                            <i class="material-icons left">login</i>
                            Sign In
                        </a>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            M.updateTextFields();
        });
    </script>
{% endblock %}